<p id="notice"><%= notice %></p>

<h1> Bem vindo Client </h1>
<%= form_with(url: '/clients', method: 'get', local: true) do %>
  <%= label_tag :q, 'Busca:' %>
  <%= text_field_tag :q %>
  <%= submit_tag 'Pesquisar' %>
<% end %>


<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Age</th>
      <th>Type</th>
      <th>Cpf/Cnpj</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.age %></td>
         <td><%= user.type %></td>
        <td><%= user.cpf_cnpj %></td>
        <td><%= number_to_currency(user.price, locale: :"pt-BR") %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_client_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_client_path %>
