<h3>Search Result</h3>  
 

<% if @results.empty? %>
  <p>Sorry, no cars found.</p>
<% else %>
  <ul>
    <% @results.each do |result| %>
      <li><%= link_to result.user.name + ", " + result.name + ", " + result.brand + ", " +
        result.model, new_car_path(name: [result.user.name, result.name] ) %></li>
    <% end %>
  </ul>
<% end %>